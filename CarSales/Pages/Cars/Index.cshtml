@page
@model CarSales.Pages.Cars.IndexModel

@{
    ViewData["Title"] = "Wagens";
}

<h1>Overzicht wagens</h1>
<form method="post">
    <div class="row">
        <div class="col-md-4">
            <p>Filter merken : </p>
            <select name="brandfilter" class="form-control"
                    asp-for="SelectedBrandId"
                    asp-items="Model.AvailableBrands" onchange="this.form.submit()"></select>
        </div>
        <div class="col-md-4">
            <p>Filter brandstof : </p>
            <select name="fuelfilter" class="form-control"
                    asp-for="SelectedFuelId"
                    asp-items="Model.AvailableFuels" onchange="this.form.submit()"></select>
        </div>
    </div>
</form>
<hr />
<p>
    <a asp-page="Create" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> Nieuwe wagen</a>
</p>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Fuel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Performance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Mileage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].SalesPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Car)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fuel.FuelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Performance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mileage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Wijzig"><i class="fas fa-pencil-alt"></i></a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-success" title="Details"><i class="far fa-eye"></i></a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Wissen"><i class="fas fa-trash-alt"></i></a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
